{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "dist",
    "lib": ["esnext"],
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "inlineSourceMap": true,
    "jsx": "react",
    "jsxFactory": "arck.Config.createConfig"
  },
  "include": ["src/**/*"]
}
