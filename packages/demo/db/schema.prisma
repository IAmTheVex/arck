generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Post {
  post_id    String     @id @default(uuid())
  content    String?
  title      String
  author     User?
  view_count Int    @default(0)
}

model Profile {
  profile_id String     @id @default(uuid())
  bio        String?
  user       User
}

model User {
  user_id  String      @id @default(uuid())
  email    String    @unique
  name     String?
  gender   String?      @default("male")
  posts    Post[]
  profiles Profile[]
}
