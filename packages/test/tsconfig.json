    "moduleResolution": "node",
    "outDir": "dist",
    "lib": ["esnext"],
    "target": "es6",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true
